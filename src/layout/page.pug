mixin title(title, styleLink, commonStyleLink)
  doctype html
  html(lang='ru')
    head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      if commonStyleLink
        link(rel='stylesheet', href=commonStyleLink)
      if styleLink
        link(rel='stylesheet', href=styleLink)
      title= title