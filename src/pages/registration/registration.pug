include ../../layout/page.pug
+title('Регистрация', '../login/login.sass', '../../layout/style.sass')
main.form-wrap
  .form-card
    h1.title.title-form Регистрация
    form#form-reg.form-reg(action='#')
      .form-group
        label.form-label(for='email') Почта
        input.input(type='email' name='email' id='email')

      .form-group
        label.form-label(for='login') Логин
        input.input(type='text' name='login' id='login')

      .form-group
        label.form-label(for='first_name') Имя
        input.input(type='text' name='first_name' id='first_name')

      .form-group
        label.form-label(for='second_name') Фамилия
        input.input(type='text' name='second_name' id='second_name')

      .form-group
        label.form-label(for='phone') Телефон
        input.input(type='text' name='phone' id='phone')

      .form-group
        label.form-label(for='password') Пароль
        input.input(type='password' name='password' id='password')

      .form-group
        label.form-label(for='password_confirm') Пароль (еще раз)
        input.input(type='password' name='password_confirm' id='password_confirm')

      .form-group
        button.btn.btn-auth(type='submit') Зарегистрироваться
        a.link(href='../chat/chat.pug') Войти
